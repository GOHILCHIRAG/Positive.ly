<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/widget_margin">
    <TextView
        android:id="@+id/quote_of_the_day_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Quote:"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="32sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/quote_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote_of_the_day_tv"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textStyle="bold|italic"
        android:text="@string/random_quote_initializer"
        />
    <TextView
        android:id="@+id/quote_authour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote_tv"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:visibility="invisible"
        android:textStyle="bold|italic"
        android:text=""
        />

</RelativeLayout>